            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shampooSpain"
                    style="@style/english"
                    android:text="Сhampú" />

                <TextView
                    android:id="@+id/tvShampooSpain"
