            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/quailSpain"
                    style="@style/english"
                    android:text="Codorniz" />

                <TextView
                    android:id="@+id/tvQuailSpain"
                    style="@style/translate"
                    android:text="Перепел" />

                <ImageView
                    android:id="@+id/ivQuailSpain"
                    style="@style/image_to_main"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_set_as" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/donkeySpain"
                    style="@style/english"
