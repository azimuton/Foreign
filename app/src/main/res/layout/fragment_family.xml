            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/brotherinlaw"
                    style="@style/english"
                    android:text="Brother-In-Law" />

                <TextView
                    android:id="@+id/tvBrotherInLaw"
                    style="@style/translate"
                    android:text="Зять" />

                <ImageView
                    android:id="@+id/ivBrotherInLaw"
                    style="@style/image_to_main"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_set_as" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sisterinlaw"
                    style="@style/english"
                    android:text="Sister-In-Law" />

                <TextView
                    android:id="@+id/tvSisterInLaw"
                    style="@style/translate"
                    android:text="Невестка" />

                <ImageView
                    android:id="@+id/ivSisterInLaw"
                    style="@style/image_to_main"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_set_as" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/niece"
                    style="@style/english"
                    android:text="Niece" />

                <TextView
                    android:id="@+id/tvNiece"
                    style="@style/translate"
                    android:text="Племянница" />

                <ImageView
                    android:id="@+id/ivNiece"
                    style="@style/image_to_main"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_set_as" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nephew"
                    style="@style/english"
                    android:text="Nephew" />

                <TextView
                    android:id="@+id/tvNephew"
                    style="@style/translate"
                    android:text="Племянник" />

                <ImageView
                    android:id="@+id/ivNephew"
                    style="@style/image_to_main"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_set_as" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/uncle"
                    style="@style/english"
                    android:text="Uncle" />

                <TextView
                    android:id="@+id/tvUncle"
                    style="@style/translate"
                    android:text="Дядя" />

                <ImageView
                    android:id="@+id/ivUncle"
                    style="@style/image_to_main"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_set_as" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/aunt"
                    style="@style/english"
                    android:text="Aunt" />

                <TextView
                    android:id="@+id/tvAunt"
                    style="@style/translate"
                    android:text="Тетя" />

                <ImageView
                    android:id="@+id/ivAunt"
                    style="@style/image_to_main"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_set_as" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>