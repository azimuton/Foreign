                    style="@style/translate"
                    android:text="Душевая кабина" />

                <ImageView
                    android:id="@+id/ivShowercabinSpain"
                    style="@style/image_to_main"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_set_as" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/towelSpain"
                    style="@style/english"
                    android:text="Toalla" />

                <TextView
                    android:id="@+id/tvTowelSpain"
                    style="@style/translate"
                    android:text="Полотенце" />

                <ImageView
                    android:id="@+id/ivTowelSpain"
                    style="@style/image_to_main"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_set_as" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/laundrybasketSpain"
                    style="@style/english"
                    android:text="Сesto de la ropa sucia" />

                <TextView
                    android:id="@+id/tvLaundrybasketSpain"
