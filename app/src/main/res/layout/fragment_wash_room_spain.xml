                <ImageView
                    android:id="@+id/ivWashbasinSpain"
                    style="@style/image_to_main"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_set_as" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/washbasincabinetSpain"
                    style="@style/english"
                    android:text="Аrmario sobre el lavabo" />

                <TextView
                    android:id="@+id/tvWashbasincabinetSpain"
                    style="@style/translate"
                    android:text="Шкафчик над умывальником" />

                <ImageView
                    android:id="@+id/ivWashbasincabinetSpain"
                    style="@style/image_to_main"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_set_as" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>