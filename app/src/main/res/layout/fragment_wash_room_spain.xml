                    style="@style/image_to_main"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_set_as" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/toothpasteSpain"
                    style="@style/english"
                    android:text="Рasta de dientes" />

                <TextView
                    android:id="@+id/tvToothpasteSpain"
                    style="@style/translate"
                    android:text="Зубная паста" />

                <ImageView
                    android:id="@+id/ivToothpasteSpain"
                    style="@style/image_to_main"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_set_as" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/soapSpain"
                    style="@style/english"
                    android:text="Jabón" />

                <TextView
                    android:id="@+id/tvSoapSpain"
