                <ImageView
                    android:id="@+id/ivShampooSpain"
                    style="@style/image_to_main"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_set_as" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/spongeforbodySpain"
                    style="@style/english"
                    android:text="Un pano" />

                <TextView
                    android:id="@+id/tvSpongeforbodySpain"
                    style="@style/translate"
                    android:text="Мочалка для тела" />

                <ImageView
                    android:id="@+id/ivSpongeforbodySpain"
                    style="@style/image_to_main"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_set_as" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/washbasinSpain"
                    style="@style/english"
                    android:text="Lavabo" />

                <TextView
                    android:id="@+id/tvWashbasinSpain"
                    style="@style/translate"
